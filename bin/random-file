#!/usr/bin/env bash
# returns random file in dir
# author | cherrynoize
# https://github.com/cherrynoize
#
# usage: random-file [dir [ignore-pattern]]
# see `man ls`.

while [ -n "$1" ]; do
  case "$1" in
    -I|--ignore)
      ignore_opts+=("-I" "$2")
      shift 2
      ;;
    -*)
      ignore_opts+=("$1" "$2")
      shift 2
      ;;
    *)
      paths+=("$1")
      shift
      ;;
  esac
done

[ "${#paths}" = "0" ] && paths+=(".")

ls "${paths[@]}" "${ignore_opts[@]}" | sort -R | grep -vf <(printf "%s:\n" "${paths[@]}") | grep -v -e '^$' | head -1
